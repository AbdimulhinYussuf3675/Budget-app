<%= stylesheet_link_tag 'sessions/new', media: 'all' %>
<div class="container">
  <div class="login__header">
    <%= link_to unauthenticated_root_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h2>Login</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:'submit-btn' %>
    </div>
  <% end %>
  
  <div class="links">
    <%= render "devise/shared/links" %> 
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

</div>